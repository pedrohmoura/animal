
/**
 * Classe Animal
 */
abstract class Animal {

    public void mover() {
        System.out.println("Animais podem se mover");
    }

    public void som() {
        System.out.println("Animais emitem som");
    }

    public void ajuda() {
        System.out.println("Lista de animais e seus respectivos sons:");
        System.out.println("Abelha: Zumbe");
        System.out.println("Boi: Muge");
        System.out.println("Burro: Zurra");
        System.out.println("Cabra: Berra, Bale");
        System.out.println("Cachorro: Late, Ladra");
        System.out.println("Cavalo: Relincha");
        System.out.println("Cobra: Sibila");
        System.out.println("Galinha: Cacareja");
        System.out.println("Gato: Mia");
        System.out.println("Grilo: Cricrila");
        System.out.println("Hiena: Ulula");
        System.out.println("Leão: Ruge");
        System.out.println("Lobo: Uiva");
        System.out.println("Macaco: Guincha");
        System.out.println("Pássaro: Pipila, Chilrea");
        System.out.println("Pato: Grasna");
        System.out.println("Pombo: Arrulha");
        System.out.println("Porco: Grunhe");
        System.out.println("Sapo: Coaxa");
        System.out.println("Tigre: Ronca");
    }
}
